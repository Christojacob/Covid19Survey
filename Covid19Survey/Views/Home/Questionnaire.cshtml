@model Covid19Survey.Models.UserResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Questionnaire</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/Styles.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center theme-header"><h4>Questionnaire</h4></div>
        <div class="panel-body">
            <div class="container">
                <form asp-action="Questionnaire">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Phone"></label>
                        <input class="form-control" asp-for="Phone" />
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Do you Wear Mask while going Outside?</label>
                        <select class="form-control" asp-for="WearMask">
                            <option value=""></option>
                            <option value="true">yes</option>
                            <option value="false">no</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Are you using public transport?</label>
                        <select class="form-control" asp-for="PublicTransportation">
                            <option value=""></option>
                            <option value="true">yes</option>
                            <option value="false">no</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Are you Currently Working?</label>
                        <select class="form-control" asp-for="Work">
                            <option value=""></option>
                            <option value="true">yes</option>
                            <option value="false">no</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary theme-btn" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

