@model UserResponse
@{
    ViewBag.Title = "Thankyou";
}
    <div class="text-center thankyou-page-wrapper">
        <img class="thankyou-img" src="@Url.Content("/images/ThankyouImg.png")" />
        <h2>Thankyou @Model.Name!</h2>
        @if (Model.WearMask == true)
        {
            @:<p>Thankyou for wearing mask and take care of yours as well as other's lives!</p>
        }
        else
        {
            @:<p>Always wear mask as a precaution!</p>
        }
        <p>Click <a class="nav-link" asp-action="Statistics">here</a> to see the overall statistics.</p>
    </div>


